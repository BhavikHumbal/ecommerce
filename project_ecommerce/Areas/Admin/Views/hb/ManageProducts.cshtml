@model IEnumerable<project_ecommerce.EDM.product>

@{
    ViewBag.Title = "ManageProducts";
    Layout = "~/Areas/Admin/Views/Shared/admin_LayoutPage1.cshtml";
}

    <h2>ManageProducts</h2>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.product_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_quentity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_img1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_img2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_img3)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.product_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_quentity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_img1)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.product_img2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_img3)
                </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.product_id }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.product_id  })
                </td>
            </tr>
        }

    </table>